import java.util.Scanner;
public class TimeZoneConverter {
    public static void main(String[] args) {
	int[] localTime = new int[2];

	Scanner kb = new Scanner(System.in);
	System.out.println("All time format should be 24 hours, xx:yy");
	System.out.print("Type your local time that you want to convert: ");
	String[] localTimeString = kb.nextLine().split(":");
	for (int i = 0; i < 2; i++) 
	    localTime[i] = Integer.parseInt(localTimeString[i]);


    }
}